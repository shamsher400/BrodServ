<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dip"
            app:cardElevation="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="top">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#ff6e26"
                android:weightSum="2">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="1"

                    android:onClick="uploadPhoto"
                    android:textColor="@android:color/black"
                    android:id="@+id/button"
                    android:layout_gravity="center_vertical" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="5dip"
                    android:layout_marginLeft="5dip"
                    android:id="@+id/button2"
                    android:onClick="uploadSelfie"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dip"
            app:cardElevation="5dp"
            android:background="@android:color/white"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff6e26">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:textColor="@android:color/white"
                    android:text=" About You "
                    android:id="@+id/textView"
                    android:textSize="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User id"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:id="@+id/ui_txt_user_id"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_below="@+id/textView"
                     />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:id="@+id/ui_txt_userid"
                    android:layout_above="@+id/ui_txt_name"
                    android:layout_alignLeft="@+id/textView"
                    android:layout_alignStart="@+id/textView" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:id="@+id/textView44"
                    android:layout_below="@+id/ui_txt_user_id"
                    android:layout_alignLeft="@+id/ui_txt_user_id"
                    android:layout_alignStart="@+id/ui_txt_user_id"
                   />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:id="@+id/ui_txt_name"
                    android:layout_alignBottom="@+id/textView44"
                    android:layout_alignLeft="@+id/ui_txt_userid"
                    android:layout_alignStart="@+id/ui_txt_userid" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UUID"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:id="@+id/textView6"
                    android:layout_below="@+id/textView44"
                    android:layout_alignLeft="@+id/textView44"
                    android:layout_alignStart="@+id/textView44" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:id="@+id/ui_txt_uuid"
                    android:layout_above="@+id/textView8"
                    android:layout_alignLeft="@+id/ui_txt_name"
                    android:layout_alignStart="@+id/ui_txt_name" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App Version"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:id="@+id/textView8"
                    android:layout_below="@+id/textView6"
                    android:layout_alignLeft="@+id/textView6"
                    android:layout_alignStart="@+id/textView6" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:id="@+id/ui_txt_app_version"
                    android:layout_alignBottom="@+id/textView8"
                    android:layout_alignLeft="@+id/ui_txt_uuid"
                    android:layout_alignStart="@+id/ui_txt_uuid" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dip"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            app:cardElevation="5dp"
            android:layout_marginLeft="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff6e26">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" About Us "
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5sp"
                    android:textStyle="italic"
                    android:textColor="@android:color/white"
                    android:textSize="22dp"
                    android:id="@+id/textView2"
                    android:layout_alignParentTop="true" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView2"
                        android:layout_marginLeft="10sp"
                        android:text="Astra track"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:id="@+id/textView3"
                      />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView2"
                        android:text=" Powered by "
                        android:textColor="@android:color/white"
                        android:textSize="12dp"
                        android:id="@+id/textView4"
                        android:layout_toRightOf="@+id/textView3"
                        android:layout_toEndOf="@+id/textView3" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView2"
                        android:textColor="@android:color/white"
                        android:id="@+id/textView11"
                        android:textSize="18sp"
                        android:layout_toRightOf="@+id/textView4"
                        android:layout_toEndOf="@+id/textView4" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="www.ybcgroup.in"
                        android:autoLink="all"
                        android:textStyle="italic"
                        android:textSize="20dp"
                        android:onClick="directToYbc"
                        android:textColorLink="@color/colorPrimaryDark"
                        android:clickable="true"
                        android:textColor="@android:color/black"
                        android:id="@+id/textView5"
                        android:layout_marginBottom="5dp"
                        android:layout_below="@id/textView11"
                        android:gravity="center" />


                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:isIndicator="true"
                        android:id="@+id/ratingBar"
                        android:rating="5"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_alignBottom="@+id/textView7"
                        android:layout_alignLeft="@+id/textView2"
                        android:layout_alignStart="@+id/textView2" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:id="@+id/textView7"
                    android:layout_marginBottom="18dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="30dp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginRight="5dp"
            app:cardElevation="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:layout_height="150dip">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff6e26"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="@android:color/white"

                android:id="@+id/textView9"
                android:layout_below="@+id/textView10"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:text="Found a Defect in our App ?"
                android:id="@+id/textView10"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:onClick="submitBugReport"
                android:textSize="10dp"
                android:layout_marginBottom="5dp"
                android:text="Submit"
                android:id="@+id/button3"
                android:layout_below="@+id/floatingedit"
                android:layout_centerHorizontal="true" />
            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/floatingedit"
                android:layout_marginLeft="10dp"
                android:fitsSystemWindows="true"
                android:layout_below="@+id/textView9"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/bug_description"
                    android:paddingLeft="5dp"
                    android:id="@+id/ui_et_submit_bug"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:inputType="textMultiLine"
                    android:maxLines="1"
                    android:focusableInTouchMode="true"
                    android:focusable="true"
                    android:textSize="15sp"
                    android:layout_below="@+id/textView9"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    </ScrollView>